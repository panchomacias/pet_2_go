<div class="bg-white ">
<div class="bg-white align-items-center justify-content-center vh-100 new-reviews-card-container">
<div class="new-reviews-card">
  <h3 class= display-4>Leave a Review</h3>
    <%= simple_form_for [@offer, @review], html: { class: 'form-horizontal' } do |f| %>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :rating, as: :string, class: 'form-control new-reviews-input' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :comment, class: 'form-control new-reviews-input' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Submit Review', class: 'btn btn-flat' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
