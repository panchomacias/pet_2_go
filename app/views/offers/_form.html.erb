<%= simple_form_for ([@user, @offer]), html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :description, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :price, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :date_from, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :date_to, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :photo, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 text-end">
      <%= f.submit 'Finish', class: 'btn btn-flat' %>
    </div>
  </div>
<% end %>
